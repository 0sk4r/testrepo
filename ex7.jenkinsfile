pipeline {

    agent any 

    parameters {
        choice choices: ['dev', 'stage', 'demo', 'prod'], description: '', name: 'env'
    }

    stages {
        stage("Stabe A") {
        when {
            anyOf {
                expression { params.env == 'demo' }
            }
        }
        steps {
            echo "deploy $params.environment"
        } 
        }
        stage("Stage B") {
            steps {
                script {
                    if ( params.environment == "demo" ) {
                        echo "deploy $params.env"
                    }
                }
            }
        }

    }

}
